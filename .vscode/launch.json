{
  "configurations": [
    {
      "command": "yarn workspace server dev",
      "name": "dev",
      "request": "launch",
      "type": "node-terminal",
      "preLaunchTask": "client.watch"
    },
    {
      "command": "yarn workspace server prod",
      "name": "prod",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "command": "yarn workspace client dev",
      "name": "client",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceRoot}/workspaces/client"
    },
    {
      "command": "yarn workspace server dev",
      "name": "server",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "command": "yarn jest ${fileBasename} --watchAll=false --watch",
      "name": "jest: $file",
      "request": "launch",
      "type": "node-terminal",
      "preLaunchTask": "docker.start"
    },
    {
      "command": "node ${fileDirname}/${fileBasename}",
      "name": "node: $file",
      "request": "launch",
      "type": "node-terminal"
    }
  ]
}
